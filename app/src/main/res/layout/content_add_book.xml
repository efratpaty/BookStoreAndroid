<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_add_book"
        tools:context="com.example.aviga_000.bookstoreandroid.AddBookActivity"
        android:background="#e8cff6">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:weightSum="1"
            android:id="@+id/linearLayout">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Add Book"
                android:id="@+id/textView32"
                android:layout_gravity="center_horizontal"
                android:textColor="#52024d"
                android:textStyle="bold|italic" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Name:"
                android:textColorHint="#52024d"
                android:ems="10"
                android:background="@drawable/back"
                android:id="@+id/nameText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:hint="Author:"
                android:background="@drawable/back"
                android:textColorHint="#52024d"
                android:ems="10"
                android:id="@+id/authorText" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"
                android:layout_gravity="center_horizontal" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:textColorHint="#52024d"
                android:background="@drawable/back"
                android:id="@+id/publicationText"
                android:layout_gravity="center_horizontal"
                android:hint="Publication date: " />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:text="Publishers:"
                android:background="@drawable/back"
                android:textColorHint="#52024d"
                android:ems="10"
                android:id="@+id/publisherText"
                android:layout_gravity="center_horizontal" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:textColorHint="#52024d"
                android:ems="10"
                android:background="@drawable/back"
                android:id="@+id/priceText"
                android:layout_gravity="center_horizontal"
                android:text="Recommended price:" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:background="@drawable/back"
                android:textColorHint="#52024d"
                android:id="@+id/summaryText"
                android:layout_gravity="center_horizontal"
                android:hint="Summary:" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/subjectText"
                android:hint="Subjects:"
                android:background="@drawable/back"
                android:textColorHint="#52024d"
                android:nestedScrollingEnabled="false"
                android:onClick="subjectOnClick" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="15dp" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="#52024d"
                android:hint = "Url:"
                android:background="@drawable/back"
                android:id="@+id/urlText" />

            <ImageView
                android:layout_width="119dp"
                android:layout_height="119dp"
                android:id="@+id/bookImageView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Book image:"
                android:textColor="#52024d"
                android:id="@+id/imageTextView" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Add book:"
                android:id="@+id/addBookbutton"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:background="@drawable/my_button" />

        </LinearLayout>

    </RelativeLayout>
</ScrollView>