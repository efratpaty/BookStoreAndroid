<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_show_book"
    android:background="#e8cff6"
    tools:context="com.example.aviga_000.bookstoreandroid.ShowBookActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout3">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Book Description"
            android:id="@+id/textView32"
            android:layout_gravity="center_horizontal"
            android:textColor="#52024d"
            android:textStyle="bold|italic" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <ImageView
            android:layout_width="134dp"
            android:layout_height="134dp"
            android:id="@+id/bookImageView" />
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Book name: "
                android:textColor="#52024d"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/linearLayout3"
                android:layout_alignEnd="@+id/linearLayout3"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp"
                android:id="@+id/bnText" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/bookNameText"
                android:layout_weight="25.50"
                android:accessibilityLiveRegion="none"
                android:contextClickable="false"
                android:editable="false" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Author: "
                android:textColor="#52024d"
                android:id="@+id/aText"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/linearLayout3"
                android:layout_alignEnd="@+id/linearLayout3"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:id="@+id/authorText"
                android:layout_weight="25.50"
                android:inputType="textPersonName"
                android:accessibilityLiveRegion="none"
                android:clickable="false"
                android:longClickable="false" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Publisher: "
                android:textColor="#52024d"
                android:id="@+id/pText"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/linearLayout3"
                android:layout_alignEnd="@+id/linearLayout3"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number|textPersonName"
                android:ems="10"
                android:id="@+id/publisherText"
                android:layout_weight="11"
                android:longClickable="false"
                android:accessibilityLiveRegion="none" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1">

            <TextView
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Publication date: "
                android:textColor="#52024d"
                android:id="@+id/pdText"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/linearLayout3"
                android:layout_alignEnd="@+id/linearLayout3"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp" />

            <EditText
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/publicationDateText"
                android:accessibilityLiveRegion="none"
                android:contextClickable="false"
                android:editable="false"
                android:layout_weight="56" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Subject: "
                android:textColor="#52024d"

                android:id="@+id/textView10"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/linearLayout3"
                android:layout_alignEnd="@+id/linearLayout3"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp" />

            <AutoCompleteTextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/subjectAutoCompleteTextView"
                android:layout_weight="93.75"
                android:autoText="false"
                android:accessibilityLiveRegion="none" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="215dp"
            android:layout_height="match_parent"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Recommended price: "
                android:textColor="#52024d"
                android:id="@+id/rcText"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/linearLayout3"
                android:layout_alignEnd="@+id/linearLayout3"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp" />

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/editText3"
                android:contextClickable="false"
                android:editable="false" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Price: "
                android:id="@+id/textView7"
                android:textColor="#52024d"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/linearLayout3"
                android:layout_alignEnd="@+id/linearLayout3"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/priceText"
                android:layout_weight="11"
                android:accessibilityLiveRegion="none" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Condition: "
                android:id="@+id/textView9"
                android:textColor="#52024d"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/linearLayout3"
                android:layout_alignEnd="@+id/linearLayout3"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp" />

            <AutoCompleteTextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/conditionAutoCompleteTextView"
                android:layout_weight="93.75"
                android:autoText="false"
                android:accessibilityLiveRegion="none" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Copies: "
                android:id="@+id/textView12"
                android:layout_centerVertical="true"
                android:textColor="#52024d"
                android:layout_alignRight="@+id/linearLayout3"
                android:layout_alignEnd="@+id/linearLayout3"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp" />

            <AutoCompleteTextView
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:id="@+id/copiesText"
                android:layout_weight="93.75"
                android:autoText="false"
                android:inputType="number"
                android:accessibilityLiveRegion="none" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="215dp"
            android:layout_height="match_parent"
            android:weightSum="1" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Summary: "
                android:id="@+id/textView11"
                android:textColor="#52024d"
                android:layout_centerVertical="true"
                android:layout_alignRight="@+id/linearLayout3"
                android:layout_alignEnd="@+id/linearLayout3"
                android:layout_marginRight="2dp"
                android:layout_marginEnd="2dp" />

            <EditText
                android:layout_width="202dp"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/summaryText"
                android:accessibilityLiveRegion="none" />
        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Add book:"
                android:id="@+id/cartButton"
                android:layout_gravity="right"
                android:text="Add to Shopping Cart"
                android:onClick="onCartClickActivity"
                android:textColor="#ffffff"
                android:background="@drawable/my_button"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Update book"
                android:id="@+id/updateBookButton"
                android:visibility="invisible"
                android:onClick="onUpdateClick"
                android:layout_gravity="center_horizontal"
                android:textColor="#ffffff"
                android:background="@drawable/my_button"/>
        </LinearLayout>

    </LinearLayout>


</RelativeLayout>
</ScrollView>